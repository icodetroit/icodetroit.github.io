extends ./base 
- var js_file = js_base + "index.js";

block head
    title IMAGINARIUM
 
    link(rel='stylesheet', href='static/css/index.css')
    script(src='#{requirejs}', data-main='#{js_base}index.js', type='text/javascript')
block skrollr-images
    .parallax-image-wrapper(data-anchor-target="#top + .image-gap", data-bottom-top="transform:translate3d(0px, 200%, 0px)", data-top-bottom="transform:translate3d(0px, 0%, 0px)")
        .parallax-image(style="background-image:url(/static/img/river.jpg)", data-anchor-target="#top + .image-gap", data-bottom-top="transform: translate3d(0px, -80%, 0px);", data-top-bottom="transform: translate3d(0px, 80%, 0px);")

block content
    .section#top
        .title-text IMAGINARIUM
        .menu
            .menu-item.about
                a(href='about.html')
                    .text About
            .menu-item.blog
                a(href='blog.html')
                    .text Blog
            .menu-item.contact
                a(href='contact.html')
                    .text Contact
    .image-gap

            
            

